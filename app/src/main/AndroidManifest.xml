<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.toni.flowerfarm">

    <application
        android:name=".Application.FlowerFarm"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Intro.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity android:name=".Intro.RegisterAcivity" />
        <activity
            android:name=".Farmer.FarmerMainPanel"
            android:label="@string/title_activity_farmer_main_panel"
            android:theme="@style/AppTheme" />
        <activity android:name=".Farmer.ConfirmationActivity" />
        <activity
            android:name=".Farmer.PostFarmConditionActivity"
            android:label="@string/title_activity_post_farm_condition"
            android:parentActivityName=".Farmer.FarmerMainPanel"
            android:theme="@style/AppTheme" />
        <activity android:name=".Farmer.SinglePostViewActivity" />
        <activity android:name=".Admin.AdminPanel" />
        <activity
            android:name=".Admin.AddExpertActivity"
            android:label="@string/title_activity_add_expert"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Expert.ExpertPanelActivity"
            android:label="@string/title_activity_expert_panel"
            android:theme="@style/AppTheme" />
        <activity android:name=".Expert.VerifyyingUserActivity"></activity>
    </application>

</manifest>